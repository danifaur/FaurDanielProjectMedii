@page "/"
@model FaurDanielProject.Pages.Clase.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clasa[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clasa[0].Nivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clasa[0].Intensitate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clasa[0].Antrenor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clasa[0].DateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clasa) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nivel.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Intensitate.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Antrenor.nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
